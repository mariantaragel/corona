{
    echo "$INPUT" | sed '1d' | awk -F "," '
        {
            regions[$5] += 1;
        }
        END {
            for (i in regions) {
                if (i == "") {
                    print "None: "regions[i];
                }
                else {
                    print i": "regions[i];
                }
            }
        }
    ' | sort
    exit 0
}

