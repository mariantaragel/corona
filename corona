        {
            districts[$6] += 1;
        }
        END {
            if (width == "") {
                for (i in districts) {
                    if (i == "") {
                        printf "None: ";
                        modulo = districts[i] % 1000;
                        graphic = int((districts[i] - modulo)/1000);
                        for (i=0; i < graphic; i++) {
                            printf "#";
                        }
                        printf "\n";
                    }
                    else {
                        printf i": ";
                        modulo = districts[i] % 1000;
                        graphic = int((districts[i] - modulo)/1000);
                        for (i=0; i < graphic; i++) {
                            printf "#";
                        }
                        printf "\n";
                    }
                }
            }
            else {
                max = 0;
                for (i in districts) {
                    if (districts[i] > max) {
                        max = districts[i];
                    }
                }
                for (i in districts) {
                    if (i == "") {
                        printf "None: ";
                        ratio = max / districts[i];
                        graphic = int(width / ratio);
                        for (i=0; i < graphic; i++) {
                            printf "#";
                        }
                        printf "\n";
                    }
                    else{
