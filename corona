countries()
{
    echo "$INPUT" | sed '1d' | awk -F "," '
        {
            countries[$8] += 1;
        }
        END {
            for (i in countries) {
                if (i == "CZ") {
                    continue;
                }
                else if (i == "") {
                    print "None: "countries[i];
                }
                else {
                    print i": "countries[i];
                }
            }
        }
    ' | sort
    exit 0
}

countries_graphic()
{
    echo "$INPUT" | sed '1d' | awk -F "," -v width=$1 '
        {
            countries[$8] += 1;
        }
        END {
            if (width == "") {
                for (i in countries) {
                    if (i == "CZ") {
                        continue;
                    }
                    else if (i == "") {
                        printf "None: ";
                        modulo = countries[i] % 100;
                        graphic = int((countries[i] - modulo)/100);
                        for (i=0; i < graphic; i++) {
                            printf "#";
                        }
                        printf "\n";
                    }
                    else {
                        printf i": ";
                        modulo = countries[i] % 100;
                        graphic = int((countries[i] - modulo)/100);
                        for (i=0; i < graphic; i++) {
                            printf "#";
                        }
                        printf "\n";
                    }
                }
            }
            else {
                max = 0;
                for (i in countries) {
                    if (countries[i] > max) {
                        max = countries[i];
                    }
                }
                for (i in countries) {
                    if (i == "CZ") {
                        continue;
                    }
                    else if (i == "") {
                        printf "None: ";
                        ratio = max / countries[i];
                        graphic = int(width / ratio);
                        for (i=0; i < graphic; i++) {
                            printf "#";
                        }
                        printf "\n";
                    }
                    else{
                        printf i": ";
                        ratio = max / countries[i];
                        graphic = int(width / ratio);
                        for (i=0; i < graphic; i++) {
                            printf "#";
                        }
                        printf "\n";
                    }
                }
            }
        }
    ' | sort
     exit 0
}

