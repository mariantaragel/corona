{
    echo "$INPUT" | sed '1d' | awk -F "," '
        {
            districts[$6] += 1;
        }
        END {
            for (i in districts) {
                if (i == "") {
                    print "None: "districts[i];
                }
                else {
                    print i": "districts[i];
                }
            }
        }
    ' | sort
    exit 0
}

